.container.pt-4.pb-4.mt-3
    .page-header.mb-3
        .row.align-items-center
            .col-auto
                .page-pretitle Community
                h2.page-title 게시판

            .col-auto.ml-auto.d-print-none
                .d-flex
                    a.btn.btn-border.ml-2.d-none.d-sm-inline-block(routerLink="/community")
                        i.fas.fa-list
                        span.ml-2 목록

                    a.btn.btn-border.ml-2.d-none.d-sm-inline-block(*ngIf="login == user.id", routerLink="/community/edit/{{post}}")
                        i.fas.fa-edit
                        span.ml-2 편집

    .info-form.row.first-child
        .col-md-1.text-left
            .btn.btn-sm.btn-border(*ngIf="view.priority==1") 필독
            .btn.btn-sm.btn-border(*ngIf="view.priority==0") 일반
        .col-md-8
            h3.m-0(style="font-size: 20px; line-height: 24px;") {{view.title}}
        .col-md-3.text-right
            .btn.btn-sm 작성자
            span.ml-3 {{user.name}}
                .text-muted.mt-2 {{view.created}}

    .data-content(style="background: none;")
        textarea('#editor'='', [ngClass]="{'hide-textarea' : isSet}")

    .info-form.row.last-child
        wiz-component-community-comment()